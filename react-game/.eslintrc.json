{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": 0,
        "indent": [2, "tab"],
        "no-tabs": 0,
        "react/jsx-indent": [2, "tab"],
        "react/prop-types": "off",
        "react/jsx-indent-props": 0,
        "no-nested-ternary": 0,
        "jsx-a11y/control-has-associated-label": 0
    }
}
